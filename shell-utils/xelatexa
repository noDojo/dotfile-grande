#!/bin/sh
echo 'xelatex pass 1/3'
xelatex $1.tex > /dev/null || exit
echo 'bibtex pass 1/1'
bibtex $1 > /dev/null
echo 'xelatex pass 2/3'
xelatex $1.tex > /dev/null || exit
echo 'makeglossaries pass 1/1'
makeglossaries $1 > /dev/null
echo 'xelatex pass 3/3'
xelatex $1.tex > /dev/null || exit
echo 'cleaning up'
rm -f *.aux *.bbl *.blg *.glg *.glo *.gls *.ist *.lof *.log *.lot *.out *.toc *.acn *.acr *.alg >/dev/null
echo 'all done!'
